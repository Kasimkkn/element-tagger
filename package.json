{
    "name": "element-tagger",
    "version": "1.0.0",
    "description": "Automatic JSX element tagging for visual website builders with TypeScript support",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src",
        "README.md"
    ],
    "scripts": {
        "build": "rollup -c && tsc --project tsconfig.build.json",
        "build:dev": "rollup -c --watch",
        "build:types": "tsc --project tsconfig.build.json",
        "dev": "vitest --ui",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,tsx}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
        "clean": "rimraf dist",
        "prepare": "npm run clean && npm run build",
        "prepublishOnly": "npm run test && npm run lint && npm run build"
    },
    "dependencies": {
        "@babel/parser": "^7.23.6",
        "@babel/traverse": "^7.23.6",
        "@babel/generator": "^7.23.6",
        "@babel/types": "^7.23.6",
        "recast": "^0.23.4",
        "chokidar": "^3.5.3",
        "fs-extra": "^11.2.0",
        "fast-glob": "^3.3.2",
        "crypto": "^1.0.1"
    },
    "devDependencies": {
        "@types/babel__parser": "^7.1.1",
        "@types/babel__traverse": "^7.20.4",
        "@types/babel__generator": "^7.6.7",
        "@types/node": "^20.10.5",
        "@types/fs-extra": "^11.0.4",
        "typescript": "^5.3.3",
        "rollup": "^4.9.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-typescript": "^11.1.5",
        "rollup-plugin-dts": "^6.1.0",
        "vitest": "^1.1.0",
        "@vitest/ui": "^1.1.0",
        "@vitest/coverage-v8": "^1.1.0",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "jsdom": "^23.0.1"
    },
    "peerDependencies": {
        "vite": ">=4.0.0",
        "webpack": ">=5.0.0",
        "react": ">=16.8.0"
    },
    "peerDependenciesMeta": {
        "vite": {
            "optional": true
        },
        "webpack": {
            "optional": true
        }
    },
    "keywords": [
        "react",
        "jsx",
        "tsx",
        "ast",
        "visual-editor",
        "website-builder",
        "element-tagging",
        "typescript",
        "babel",
        "build-tool",
        "plugin",
        "vite",
        "webpack",
        "nextjs"
    ],
    "author": "Kasim Kadiwala",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kasimkkn/element-tagger.git"
    },
    "bugs": {
        "url": "https://github.com/kasimkkn/element-tagger/issues"
    },
    "homepage": "https://github.com/kasimkkn/element-tagger#readme",
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}